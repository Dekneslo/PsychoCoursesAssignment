@page
@model EasyBeautyASP.Pages.DeleteUsersModel
@{
    ViewData["Title"] = "Удаление пользователя";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center content mb-4">Вы уверены, что хотите удалить этого пользователя?</h2>

    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <strong>ID:</strong> @Model.User.Id
        </div>
        <div class="mb-3">
            <strong>Имя:</strong> @Model.User.FirstName
        </div>
        <div class="mb-3">
            <strong>Фамилия:</strong> @Model.User.LastName
        </div>
        <div class="mb-4">
            <strong>Email:</strong> @Model.User.Email
        </div>

        <form method="post" class="d-flex gap-3">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-page="/ShopAdmin" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>
