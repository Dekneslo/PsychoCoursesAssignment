@page "{id:int}"
@model EasyBeautyASP.Pages.EditBlogModel
@{
    ViewData["Title"] = "Редактировать статью";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <h2 class="mb-4 text-center">Редактировать статью</h2>

    <form method="post" enctype="multipart/form-data">
        <!-- ОБЯЗАТЕЛЬНО для передачи Blog.Id -->
        <input type="hidden" asp-for="Blog.Id" />

        <div class="mb-3">
            <label>Заголовок</label>
            <input asp-for="Blog.Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Краткое описание</label>
            <textarea asp-for="Blog.Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label>Полный текст</label>
            <textarea asp-for="Blog.Content" class="form-control" rows="6"></textarea>
        </div>
        <div class="mb-3">
            <label>Новое изображение (необязательно)</label>
            <input type="file" asp-for="UploadedImage" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Текущее изображение:</label><br />
            <img src="~/assets/media/blogs/@Model.Blog.Image" class="img-thumbnail" style="max-height: 200px;" />
        </div>
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </form>
</div>
