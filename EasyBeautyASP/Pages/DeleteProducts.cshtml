@page
@model EasyBeautyASP.Pages.DeleteProductsModel
@{
    ViewData["Title"] = "Удаление товара";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center content mb-4">Вы уверены, что хотите удалить этот товар?</h2>

    <div class="card p-4 shadow-sm mb-4">
        <div class="mb-3">
            <strong>ID товара:</strong> @Model.Products.ProductId
        </div>
        <div class="mb-3">
            <strong>Название:</strong> @Model.Products.ProductName
        </div>
    </div>

    <form method="post" class="d-flex gap-3">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-page="./ShopAdmin" class="btn btn-secondary">Отмена</a>
    </form>
</div>
