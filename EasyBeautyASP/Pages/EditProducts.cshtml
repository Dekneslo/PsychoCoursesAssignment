@page
@model EasyBeautyASP.Pages.EditProductsModel
@{
	ViewData["Title"] = "New Product Admin Page";
    Layout = "_Layout";
}

<h1>Edit Products</h1>

<form method="post">
    <div>
        <label for="name">Id</label>
        <input type="text" asp-for="@Model.Products.ProductId" readonly/>
    </div>
    <div>
        <label for="name">Name</label>
        <input type="text" asp-for="@Model.Products.ProductName" />
    </div>
    <div>
        <label for="description">First Description</label>
        <input asp-for=@Model.Products.ProductFirstDescription />
    </div>
    <div>
        <label for="description">Second Description</label>
        <input asp-for=@Model.Products.ProductSecondDescription />
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" asp-for="@Model.Products.ProductPrice" />
    </div>
    <div>
        <label for="price">Price</label>
        <input  asp-for="@Model.Products.ProductImage" />
    </div>
    <button type="submit">Save</button>
    <a asp-page="./ShopAdmin">Cancel</a>
</form>