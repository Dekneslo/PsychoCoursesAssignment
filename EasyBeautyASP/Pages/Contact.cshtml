@page
@model EasyBeautyASP.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

 <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-md-8 col-sm-10 justify-content-center text-center contact-style">
        <div class="row p-5">
          <div class="col-md-12 text-center">
            <h1>
              Связаться с нами
            </h1>
          </div>
        </div>
        <form action="/" id="form">
          <div class="form-floating mb-3 input-control">
            <input type="text" class="form-control" id="username" name="username">
            <label for="floatingInput">Ваше имя</label>
            <div class="error"></div>
          </div>
          <div class="form-floating mb-3 input-control">
            <input type="text" class="form-control" id="email" name="email">
            <label for="floatinginput">Email Address</label>
            <div class="error"></div>
          </div>
          <div class="form-floating mb-3 input-control">
            <input type="text" class="form-control" id="number" name="number">
            <label for="floatinginput">Номер Телефона</label>
            <div class="error"></div>
          </div>
          <div class="form-floating mb-3 input-control">
            <textarea class="form-control" id="textarea" name="textarea" rows="5"></textarea>
            <label for="floatingTextarea">Сообщение</label>
            <div class="error"></div>
          </div>
          <div class="form-floating mb-5">
            <button class="style-btn-2" type="submit">&nbsp;&nbsp; Отправить &nbsp;&nbsp;</button>
          </div>
        </form>
      </div>
    </div>
  </div>